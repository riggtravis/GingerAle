<%= bootstrap_form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@group.errors.count, "error") %>
        prohibited this group from being saved:
      </h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.select :user_id, Users.all %>
  </div>
  <div class="field">
    <%= f.label :course_id %><br>
    <%= f.select :course_id, Courses.all %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
